<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="match_parent"
        android:id="@+id/swipe_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:id="@+id/image"
                android:src="@drawable/demo5" />
            <RelativeLayout
                android:layout_toEndOf="@+id/image"
                android:layout_toStartOf="@+id/img11"
                android:id="@+id/img1"
                android:layout_centerVertical="true"
                android:layout_width="150dp"
                android:layout_height="180dp">

                <RelativeLayout
                    android:text="UFC 3"
                    android:paddingLeft="1dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="35dp"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp">
                        <TextView
                            android:id="@+id/titlee"
                            android:layout_gravity="left"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginLeft="10dp"
                            tools:ignore="MissingPrefix,RtlHardcoded"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="UFC 3"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                        <TextView
                            android:textSize="12sp"
                            android:id="@+id/arrivedDate"
                            android:layout_marginLeft="10dp"
                            android:text="Arrived 22/03/2020"
                            android:textColor="@color/white"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/availabletxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="High Availablity"
                            android:textAllCaps="false"
                            android:textColor="@color/green"
                            android:textSize="12dp" />
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/img11"
                android:layout_width="130dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="180dp">

                <RelativeLayout
                    android:text="UFC 3"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="35dp"
                    android:layout_height="150dp">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:padding="5dp"
                            android:id="@+id/available"
                            android:layout_width="40dp"
                            android:layout_height="40dp"/>

                        <Button
                            android:id="@+id/addtoqueue"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/background_reverse_gradient"
                            android:text="Rent Now"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </FrameLayout>
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


</LinearLayout>